{% extends "_frame.njk" %}
{% import "_components.njk" as components %}
{% block title %}Contact Us{% endblock %}
{% block content %}
  <div class="max-w-3xl mx-auto px-6">
    <div>
      <h1>Contact read{this}.io</h1>
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-12 mt-8">
        <!-- Aiko's Profile -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="mb-6">
            <img
              src="team/aiko.webp"
              alt="Aiko Jansen"
              class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-2 border-primary"/>
            <h2 class="font-mono text-primary text-center">Aiko Jansen</h2>
            <p class="text-primary/70 text-center mb-2">CTO @NC-Vision GmbH</p>
          </div>
          <div class="space-y-4">
            <p class="text-primary/70">
              Technical leader with a passion for building scalable systems and fostering developer growth.
            </p>
            <div class="flex justify-center space-x-4">
              <a
                href="https://github.com/Iqon"
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary hover:text-secondary transition-colors">
                <span class="icon github w-6 h-6 bg-primary"></span>
              </a>
              <a
                href="https://www.linkedin.com/in/aikojansen/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary hover:text-secondary transition-colors">
                <span class="icon linkedin w-6 h-6 bg-primary"></span>
              </a>
            </div>
          </div>
        </div>
        <!-- Senad's Profile -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="mb-6">
            <img
              src="team/senad.webp"
              alt="Senad Redzic"
              class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-2 border-primary"/>
            <h2 class="font-mono text-primary text-center">Senad Redzic</h2>
            <p class="text-primary/70 text-center mb-2">AI/ML Team Lead @NC-Vision GmbH</p>
          </div>
          <div class="space-y-4">
            <p class="text-primary/70">
              AI/ML expert focused on bringing machine learning solutions to production environments.
            </p>
            <div class="flex justify-center space-x-4">
              <a
                href="https://github.com/senad-redzic"
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary hover:text-secondary transition-colors">
                <span class="icon github w-6 h-6 bg-primary"></span>
              </a>
              <a
                href="https://www.linkedin.com/in/senad-redzic/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary hover:text-secondary transition-colors">
                <span class="icon linkedin w-6 h-6 bg-primary"></span>
              </a>
            </div>
          </div>
        </div>
      </div>
      <!-- Contact Information -->
      <div class="mt-12 bg-white p-6 rounded-lg shadow-md">
        <h2 class="font-mono text-primary mb-4">// Get in Touch</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="font-mono text-primary/70 mb-2">Email</h3>
            <a href="mailto:info@readthis.io" class="text-secondary hover:text-primary transition-colors">
              info@readthis.io
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}